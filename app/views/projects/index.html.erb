<!DOCTYPE html>
<html>
<head>
  <title>Projects</title>
  <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <style>
    body {
      background-color: white;
    }
    .navbar-custom {
      background-color: grey;
    }
    .form-container {
      max-width: 500px;
      margin: 50px auto;
      padding: 20px;
      background-color: grey;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    .project-list {
      margin-top: 20px;
    }
    .project-list li {
      padding: 10px;
      margin-bottom: 10px;
      background-color: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
    .project-list li:hover {
      background-color: #e9ecef;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-custom">
  <div class="d-flex w-100">
    <!-- User Info on the Left -->
    <div class="mr-auto d-flex align-items-center">
      <span class="text-white mx-2">
        <%= current_user.email %> | <%= current_user.role %>
      </span>
    </div>

    <!-- My Projects at the Center -->
    <div class="mx-auto">
      <a class="navbar-brand" href="#">My Projects</a>
    </div>

    <!-- Logout and Audit Log on the Right -->
    <div class="ml-auto d-flex align-items-center">

     <% if can?(:access, :audit_log) %>
      <%= link_to 'Audit Log', audit_log_projects_path, class: 'btn btn-light mx-2' %>
     <% end %>

      <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-light' %>
    </div>
  </div>
</nav>


  <!-- Form Container -->
  <div class="form-container">
    <h1 class="text-center">Create a New Project</h1>
    <%= form_with(model: @project) do |f| %>

      <div class="form-group">
        <%= f.label :title, 'Project Title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      

      <div class="form-group">
        <%= f.label :files, 'Upload Files' %>
        <%= f.file_field :files,multiple: true, class: 'form-control' %>
      </div>

      <div class="text-center">

        <% if can? :create, Project %>
        <%= f.submit 'Create New Project', class: 'btn btn-primary' %>
        <% end %>

      </div>
    <% end %>
  </div>

  <!-- Project List -->
  <ul class="project-list list-unstyled">
    <% @projects.each do |project| %>
      <li class="mb-3">
        <!-- First Line: Project ID and Title -->
        <div>
          <%= link_to project.id, project_path(project), class: 'text-dark font-weight-bold' %>.
          <%= link_to project.title, project_path(project), class: 'text-dark' %>
        </div>
        
        <!-- Second Line: File Info and Delete Button -->
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <% if project.files.attached? %>
              <% project.files.each do |file| %>
                <span> **<%= link_to "Attached File", rails_blob_path(file, disposition: "inline"), target: "_blank", class: "file-link" %>**</span>
              <% end %>
            <% else %>
              <span>**No files uploaded**</span>
            <% end %>
          </div>
  
          <!-- Delete Button on the right -->
          <div>
            <% if can? :destroy, @project %>
            <%= form_with url: project_path(project), method: :delete, local: true, html: { class: 'd-inline' } do %>
              <%= submit_tag 'Delete', class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this project?' } %>
            <% end %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  

</body>
</html>

